<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Project.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/macronutrientsToolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Project.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/macronutrientsChart"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/carbohydratesColor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@color/blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/carbohydratesTotal" />

        <TextView
            android:id="@+id/fatsColor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@color/red"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fatsTotal" />

        <TextView
            android:id="@+id/proteinsColor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:background="@color/green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/proteinsTotal" />

        <TextView
            android:id="@+id/carbohydratesLabel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:text="Carbohydrates"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/carbohydratesColor"
            app:layout_constraintTop_toTopOf="@+id/carbohydratesColor" />

        <TextView
            android:id="@+id/fatsLabel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:text="Fats"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/fatsColor"
            app:layout_constraintTop_toTopOf="@+id/fatsColor" />

        <TextView
            android:id="@+id/proteinsLabel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:text="Proteins"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/proteinsColor"
            app:layout_constraintTop_toTopOf="@+id/proteinsColor" />

        <TextView
            android:id="@+id/carbohydratesAmount"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="0g"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/carbohydratesLabel"
            app:layout_constraintTop_toTopOf="@+id/carbohydratesLabel" />

        <TextView
            android:id="@+id/fatsAmount"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="0g"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/fatsLabel"
            app:layout_constraintTop_toTopOf="@+id/fatsLabel" />

        <TextView
            android:id="@+id/proteinsAmount"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:text="0g"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/proteinsLabel"
            app:layout_constraintTop_toTopOf="@+id/proteinsLabel" />

        <TextView
            android:id="@+id/goalLabel"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:text="Goal"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totalLabel"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:text="Total"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/goalLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/carbohydratesGoal"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goalLabel" />

        <TextView
            android:id="@+id/fatsGoal"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/carbohydratesGoal" />

        <TextView
            android:id="@+id/proteinsGoal"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fatsGoal" />

        <TextView
            android:id="@+id/carbohydratesTotal"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:text="0%"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/carbohydratesGoal"
            app:layout_constraintTop_toBottomOf="@+id/totalLabel" />

        <TextView
            android:id="@+id/fatsTotal"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:text="0%"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/fatsGoal"
            app:layout_constraintTop_toBottomOf="@+id/carbohydratesTotal" />

        <TextView
            android:id="@+id/proteinsTotal"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:text="0%"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@+id/proteinsGoal"
            app:layout_constraintTop_toBottomOf="@+id/fatsTotal" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/goalsButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/design_default_color_secondary"
        android:gravity="center"
        android:text="Customise daily goals"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>